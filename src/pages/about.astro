---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const chefProfiles = [
  {
    name: "Michael Thompson",
    role: "Executive Chef",
    bio: "With over 20 years of culinary experience in Michelin-starred restaurants across Europe, Chef Michael brings a wealth of knowledge and creativity to Elixir. His passion for combining traditional techniques with modern innovation creates unforgettable dining experiences.",
    image: "https://images.pexels.com/photos/2544829/pexels-photo-2544829.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    name: "Sophia Rodriguez",
    role: "Head Pastry Chef",
    bio: "Trained in Paris, Chef Sophia has mastered the art of pastry making. Her exquisite desserts are not only a feast for the taste buds but also visually stunning, reflecting her artistic approach to pastry creation.",
    image: "https://images.pexels.com/photos/3814446/pexels-photo-3814446.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    name: "James Wilson",
    role: "Bar Manager",
    bio: "Award-winning mixologist James leads our bar team in creating innovative and classic cocktails that perfectly complement our menu. His expertise in spirits and flavor combinations has established Elixir as a destination for cocktail enthusiasts.",
    image: "https://images.pexels.com/photos/4253320/pexels-photo-4253320.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];

const timeline = [
  {
    year: "2010",
    title: "The Beginning",
    description: "La Piazza, Yarm opened its doors, introducing a new fine dining concept to the area."
  },
  {
    year: "2013",
    title: "First Recognition",
    description: "Received our first industry award for culinary excellence and innovative cocktails."
  },
  {
    year: "2015",
    title: "Expansion",
    description: "Expanded our premises to include a dedicated cocktail lounge and private dining area."
  },
  {
    year: "2018",
    title: "Chef Michael Joins",
    description: "Executive Chef Michael Thompson joined the team, bringing his Michelin-star experience."
  },
  {
    year: "2020",
    title: "Adaptation",
    description: "Successfully adapted to new challenges by introducing gourmet home dining experiences."
  },
  {
    year: "2023",
    title: "Renovation",
    description: "Completed a major renovation to enhance our dining space while maintaining our signature ambiance."
  }
];
---

<Layout title="About Us | La Piazza, Yarm">
  <Header />
  
  <!-- About Hero Section -->
  <section class="relative pt-24 pb-16 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Our Story</h1>
      <div class="w-20 h-1 bg-secondary mx-auto mb-6"></div>
      <p class="max-w-2xl mx-auto text-gray-300">
        Discover the passion and philosophy behind La Piazza, Yarm.
      </p>
    </div>
  </section>
  
  <!-- Our Story Section -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Text Content -->
        <div class="lg:w-1/2 animate-slide-up">
          <h2 class="text-3xl font-serif text-primary mb-6">The Elixir Experience</h2>
          <div class="w-20 h-1 bg-secondary mb-8"></div>
          <p class="text-gray-700 mb-6 leading-relaxed">
            Established in 2010, La Piazza, Yarm was born from a vision to create a dining destination that celebrates the art of fine cuisine, exceptional drinks, and warm hospitality. Nestled in the heart of Richmond, our restaurant has become a beloved landmark for locals and visitors alike.
          </p>
          <p class="text-gray-700 mb-6 leading-relaxed">
            Our philosophy is simple: to create memorable experiences through food. We believe that dining is not just about sustenance, but a journey that engages all the senses. Every dish tells a story, every ingredient has been thoughtfully selected, and every presentation is crafted with artistic flair.
          </p>
          <p class="text-gray-700 leading-relaxed">
            From the moment you step through our doors, you'll be enveloped in an atmosphere of refined elegance. Our attentive staff will guide you through your dining experience, ensuring every detail is perfect. Whether you're celebrating a special occasion or simply enjoying an evening out, Elixir promises an unforgettable experience.
          </p>
        </div>
        
        <!-- Image -->
        <div class="lg:w-1/2 animate-slide-up" style="animation-delay: 0.2s;">
          <img 
            src="https://images.pexels.com/photos/827528/pexels-photo-827528.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Restaurant interior" 
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Timeline -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-3xl font-serif text-primary mb-6">Our Journey</h2>
        <div class="w-20 h-1 bg-secondary mx-auto mb-8"></div>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {timeline.map((item, index) => (
          <div class={`flex flex-col md:flex-row gap-8 mb-12 last:mb-0 animate-slide-up`} style={`animation-delay: ${0.1 * (index + 1)}s`}>
            <div class="md:w-1/4">
              <div class="bg-secondary text-white py-2 px-4 rounded text-center font-medium">
                {item.year}
              </div>
            </div>
            <div class="md:w-3/4">
              <h3 class="text-xl font-medium text-primary mb-2">{item.title}</h3>
              <p class="text-gray-700">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Meet the Team -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-3xl font-serif text-primary mb-6">Meet Our Team</h2>
        <div class="w-20 h-1 bg-secondary mx-auto mb-8"></div>
        <p class="max-w-2xl mx-auto text-gray-700">
          The talented individuals behind Elixir's exceptional food and service.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {chefProfiles.map((profile, index) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden animate-slide-up" style={`animation-delay: ${0.1 * (index + 1)}s`}>
            <img 
              src={profile.image} 
              alt={profile.name} 
              class="w-full h-80 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-medium text-primary mb-1">{profile.name}</h3>
              <p class="text-secondary font-medium mb-4">{profile.role}</p>
              <p class="text-gray-600">{profile.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Values -->
  <section class="py-16 bg-primary text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-3xl font-serif mb-6">Our Values</h2>
        <div class="w-20 h-1 bg-secondary mx-auto mb-8"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-6 border border-gray-700 rounded animate-slide-up">
          <h3 class="text-xl font-medium mb-4 text-secondary">Quality Ingredients</h3>
          <p class="text-gray-300">
            We source only the highest quality seasonal ingredients from trusted local suppliers.
          </p>
        </div>
        
        <div class="p-6 border border-gray-700 rounded animate-slide-up" style="animation-delay: 0.1s;">
          <h3 class="text-xl font-medium mb-4 text-secondary">Culinary Innovation</h3>
          <p class="text-gray-300">
            We constantly explore new techniques and flavor combinations while respecting culinary traditions.
          </p>
        </div>
        
        <div class="p-6 border border-gray-700 rounded animate-slide-up" style="animation-delay: 0.2s;">
          <h3 class="text-xl font-medium mb-4 text-secondary">Exceptional Service</h3>
          <p class="text-gray-300">
            We believe in warm, attentive service that makes every guest feel special and valued.
          </p>
        </div>
        
        <div class="p-6 border border-gray-700 rounded animate-slide-up" style="animation-delay: 0.3s;">
          <h3 class="text-xl font-medium mb-4 text-secondary">Sustainability</h3>
          <p class="text-gray-300">
            We're committed to sustainable practices that minimize our environmental footprint.
          </p>
        </div>
        
        <div class="p-6 border border-gray-700 rounded animate-slide-up" style="animation-delay: 0.4s;">
          <h3 class="text-xl font-medium mb-4 text-secondary">Community</h3>
          <p class="text-gray-300">
            We actively engage with and support our local community through various initiatives.
          </p>
        </div>
        
        <div class="p-6 border border-gray-700 rounded animate-slide-up" style="animation-delay: 0.5s;">
          <h3 class="text-xl font-medium mb-4 text-secondary">Inclusivity</h3>
          <p class="text-gray-300">
            We create a welcoming environment where diverse culinary preferences and dietary needs are respected.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section class="py-16 bg-light text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-serif text-primary mb-6">Experience La Piazza, Yarm</h2>
      <p class="max-w-2xl mx-auto mb-8 text-gray-700">
        We invite you to join us and experience our passion for exceptional food and hospitality firsthand.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/menu" 
          class="bg-primary text-white px-6 py-3 rounded-sm hover:bg-primary-dark transition-colors"
        >
          View Our Menu
        </a>
        <a 
          href="/reservations" 
          class="bg-secondary text-white px-6 py-3 rounded-sm hover:bg-secondary-dark transition-colors"
        >
          Book a Table
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>