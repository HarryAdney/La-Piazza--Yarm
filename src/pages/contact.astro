---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us | La Piazza, Yarm">
  <Header />

  <!-- Contact Hero Section -->
  <section class="relative pt-24 pb-16 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Contact Us</h1>
      <div class="w-20 h-1 bg-secondary mx-auto mb-6"></div>
      <p class="max-w-2xl mx-auto text-gray-300">
        We'd love to hear from you. Get in touch with us for reservations, inquiries, or feedback.
      </p>
    </div>
  </section>

  <!-- Contact Details and Form -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Contact Information -->
        <div class="lg:w-1/2 animate-slide-up">
          <h2 class="text-3xl font-serif text-primary mb-6">Get In Touch</h2>
          <div class="w-20 h-1 bg-secondary mb-8"></div>

          <div class="space-y-8 mb-8">
            <div class="flex items-start gap-4">
              <div class="bg-secondary p-3 rounded-full text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-primary mb-1">Address</h3>
                <address class="not-italic text-gray-600">
                  75 High St.<br>
                  Stockton-on-Tees<br>
                  TS15 9АH
                </address>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-secondary p-3 rounded-full text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-primary mb-1">Phone</h3>
                <p class="text-gray-600">
                  Reservations: <a href="tel:+441642045870" class="hover:text-secondary">01642 045 870</a>
                </p>
                <p class="text-gray-600">
                  General Inquiries: <a href="tel:+442071234568" class="hover:text-secondary">020 7123 4568</a>
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-secondary p-3 rounded-full text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-primary mb-1">Email</h3>
                <p class="text-gray-600">
                  Reservations: <a href="mailto:bookings@elixirrichmond.co.uk" class="hover:text-secondary">bookings@elixirrichmond.co.uk</a>
                </p>
                <p class="text-gray-600">
                  General Inquiries: <a href="mailto:info@elixirrichmond.co.uk" class="hover:text-secondary">info@elixirrichmond.co.uk</a>
                </p>
              </div>
            </div>
          </div>

          <div class="mb-8">
            <h3 class="text-lg font-medium text-primary mb-3">Opening Hours</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex justify-between">
                <span>Monday - Thursday</span>
                <span>5:00 PM - 11:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Friday - Saturday</span>
                <span>5:00 PM - 12:00 AM</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday</span>
                <span>12:00 PM - 10:00 PM</span>
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-medium text-primary mb-3">Connect With Us</h3>
            <div class="flex space-x-4">
              <a href="https://facebook.com" aria-label="Facebook" class="bg-primary text-white p-3 rounded-full hover:bg-primary-dark transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
              <a href="https://instagram.com" aria-label="Instagram" class="bg-primary text-white p-3 rounded-full hover:bg-primary-dark transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
              <a href="https://twitter.com" aria-label="Twitter" class="bg-primary text-white p-3 rounded-full hover:bg-primary-dark transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:w-1/2 animate-slide-up" style="animation-delay: 0.2s;">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-serif font-medium mb-6 text-primary">Send Us a Message</h2>

            <form class="space-y-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                >
                  <option value="">Select a subject</option>
                  <option value="reservation">Reservation Inquiry</option>
                  <option value="event">Private Event</option>
                  <option value="feedback">Feedback</option>
                  <option value="career">Career Opportunity</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-secondary hover:bg-secondary-dark text-white font-medium py-3 px-4 rounded transition-colors"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12 animate-slide-up">
        <h2 class="text-3xl font-serif text-primary mb-6">Find Us</h2>
        <div class="w-20 h-1 bg-secondary mx-auto mb-8"></div>
        <p class="max-w-2xl mx-auto text-gray-700 mb-8">
          Located in the heart of Richmond, we're easily accessible by public transport and there is parking available nearby.
        </p>
      </div>

      <div class="bg-white p-4 rounded shadow-lg animate-slide-up" style="animation-delay: 0.2s;">
        <!-- Placeholder for map - in a real implementation, this would be replaced with an actual map integration -->
        <div class="aspect-w-16 aspect-h-9 bg-gray-200 flex items-center justify-center">
          <div class="text-center p-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-secondary mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-gray-700">
              Map showing our location at 123 Richmond Road;, Richmond, London, TS15 9АH
            </p>
            <a
              href="https://maps.google.com"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block mt-4 bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition-colors"
            >
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Transportation Info -->
  <section class="py-16 bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-serif text-primary mb-8 text-center">How to Reach Us</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded shadow-lg animate-slide-up">
            <div class="text-secondary mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Public Transport</h3>
            <ul class="space-y-2 text-gray-600 text-sm">
              <li>Richmond Station: 10 minute walk</li>
              <li>Bus Routes: 65, 190, 371, 493</li>
              <li>Night Bus: N22, N65</li>
            </ul>
          </div>

          <div class="bg-white p-6 rounded shadow-lg animate-slide-up" style="animation-delay: 0.1s;">
            <div class="text-secondary mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Parking</h3>
            <ul class="space-y-2 text-gray-600 text-sm">
              <li>Paradise Road Car Park: 3 minute walk</li>
              <li>Old Deer Park Car Park: 8 minute walk</li>
              <li>Limited street parking available</li>
            </ul>
          </div>

          <div class="bg-white p-6 rounded shadow-lg animate-slide-up" style="animation-delay: 0.2s;">
            <div class="text-secondary mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-primary mb-2">Opening Hours</h3>
            <ul class="space-y-2 text-gray-600 text-sm">
              <li>Monday - Thursday: 5:00 PM - 11:00 PM</li>
              <li>Friday - Saturday: 5:00 PM - 12:00 AM</li>
              <li>Sunday: 12:00 PM - 10:00 PM</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>