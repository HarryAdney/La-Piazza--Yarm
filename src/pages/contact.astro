---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us | La Piazza, Yarm">
  <Header />

  <!-- Contact Hero Section -->
  <section class="relative pt-24 pb-16 text-white bg-primary">
    <div class="container px-4 mx-auto text-center">
      <h1 class="mb-4 font-serif text-4xl font-bold md:text-5xl">Contact Us</h1>
      <div class="w-20 h-1 mx-auto mb-6 bg-secondary"></div>
      <p class="max-w-2xl mx-auto text-gray-300">
        We'd love to hear from you. Get in touch with us for reservations, inquiries, or feedback.
      </p>
    </div>
  </section>

  <!-- Contact Details and Form -->
  <section class="py-16 bg-light">
    <div class="container px-4 mx-auto">
      <div class="flex flex-col gap-12 lg:flex-row">
        <!-- Contact Information -->
        <div class="lg:w-1/2 animate-slide-up">
          <h2 class="mb-6 font-serif text-3xl text-primary">Get In Touch</h2>
          <div class="w-20 h-1 mb-8 bg-secondary"></div>

          <div class="mb-8 space-y-8">
            <div class="flex items-start gap-4">
              <div class="p-3 text-white rounded-full bg-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="mb-1 text-lg font-medium text-primary">Address</h3>
                <address class="not-italic text-gray-600">
                  75 High St.<br>
                  Yarm<br>
                  North Yorkshire<br>
                  TS15 9–êH
                </address>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="p-3 text-white rounded-full bg-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="mb-1 text-lg font-medium text-primary">Phone</h3>
                <p class="text-gray-600">
                  Reservations: <a href="tel:+441642045870" class="hover:text-secondary">01642 045 870</a>
                </p>

              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="p-3 text-white rounded-full bg-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="mb-1 text-lg font-medium text-primary">Email</h3>
                <p class="text-gray-600">
                  Reservations: <a href="mailto:bookings@lapiazzayarm.com" class="hover:text-secondary">bookings@lapiazzayarm.com</a>
                </p>
                <p class="text-gray-600">
                  General Inquiries: <a href="mailto:enquiries@lapiazzayar.com" class="hover:text-secondary">enquiries@lapiazzayar.com</a>
                </p>
              </div>
            </div>
          </div>

          <div class="mb-8">
            <h3 class="mb-3 text-lg font-medium text-primary">Opening Hours</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex justify-between">
                <span>Monday - Thursday</span>
                <span>5:00 PM - 11:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Friday - Saturday</span>
                <span>5:00 PM - 12:00 AM</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday</span>
                <span>12:00 PM - 10:00 PM</span>
              </li>
            </ul>
          </div>

          <div>
            <h3 class="mb-3 text-lg font-medium text-primary">Connect With Us</h3>
            <div class="flex space-x-4">
              <a href="https://facebook.com" aria-label="Facebook" class="p-3 text-white transition-colors rounded-full bg-primary hover:bg-primary-dark">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
              <a href="https://instagram.com" aria-label="Instagram" class="p-3 text-white transition-colors rounded-full bg-primary hover:bg-primary-dark">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
              <a href="https://twitter.com" aria-label="Twitter" class="p-3 text-white transition-colors rounded-full bg-primary hover:bg-primary-dark">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:w-1/2 animate-slide-up" style="animation-delay: 0.2s;">
          <div class="p-8 bg-white rounded-lg shadow-lg">
            <h2 class="mb-6 font-serif text-2xl font-medium text-primary">Send Us a Message</h2>

            <form class="space-y-4">
              <div>
                <label for="name" class="block mb-1 text-sm font-medium text-gray-700">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>

              <div>
                <label for="email" class="block mb-1 text-sm font-medium text-gray-700">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>

              <div>
                <label for="phone" class="block mb-1 text-sm font-medium text-gray-700">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                />
              </div>

              <div>
                <label for="subject" class="block mb-1 text-sm font-medium text-gray-700">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                >
                  <option value="">Select a subject</option>
                  <option value="reservation">Reservation Inquiry</option>
                  <option value="event">Private Event</option>
                  <option value="feedback">Feedback</option>
                  <option value="career">Career Opportunity</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block mb-1 text-sm font-medium text-gray-700">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full px-4 py-3 font-medium text-white transition-colors rounded bg-secondary hover:bg-secondary-dark"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-gray-100">
    <div class="container px-4 mx-auto">
      <div class="mb-12 text-center animate-slide-up">
        <h2 class="mb-6 font-serif text-3xl text-primary">Find Us</h2>
        <div class="w-20 h-1 mx-auto mb-8 bg-secondary"></div>
        <p class="max-w-2xl mx-auto mb-8 text-gray-700">
          Located on Yarm High Street, we're easily accessible by public transport with plenty of parking nearby.
        </p>
      </div>

      <div class="p-4 bg-white rounded shadow-lg animate-slide-up" style="animation-delay: 0.2s;">
        <!-- Placeholder for map - in a real implementation, this would be replaced with an actual map integration -->
        <div class="flex items-center justify-center bg-gray-200 aspect-w-16 aspect-h-9">
          <div class="p-8 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto mb-4 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-gray-700">
              Map showing our location
            </p>
            <a
              href="https://maps.google.com"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block px-4 py-2 mt-4 text-white transition-colors rounded bg-primary hover:bg-primary-dark"
            >
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

