<header class="fixed w-full z-50 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="z-10">
      <h1 class="text-2xl md:text-3xl font-serif font-bold text-secondary">La Piazza, Yarm</h1>
    </a>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8 items-center">
      <a href="/" class="text-white hover:text-secondary transition-colors">Home</a>
      <a href="/menu" class="text-white hover:text-secondary transition-colors">Menu</a>
      <a href="/about" class="text-white hover:text-secondary transition-colors">About</a>
      <a href="/contact" class="text-white hover:text-secondary transition-colors">Contact</a>
      <a href="/reservations" class="bg-secondary text-white px-4 py-2 rounded hover:bg-secondary-dark transition-colors">Book a Table</a>
    </nav>
    
    <!-- Mobile Menu Button -->
    <button 
      id="menu-toggle" 
      aria-expanded="false" 
      aria-controls="mobile-menu"
      class="md:hidden z-10 p-2 text-white focus:outline-none"
    >
      <span class="sr-only">Open main menu</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden fixed inset-0 bg-primary-dark bg-opacity-95 flex-col justify-center items-center animate-fade-in z-40">
    <nav class="flex flex-col space-y-6 text-center">
      <a href="/" class="text-2xl text-white hover:text-secondary transition-colors">Home</a>
      <a href="/menu" class="text-2xl text-white hover:text-secondary transition-colors">Menu</a>
      <a href="/about" class="text-2xl text-white hover:text-secondary transition-colors">About</a>
      <a href="/contact" class="text-2xl text-white hover:text-secondary transition-colors">Contact</a>
      <a href="/reservations" class="mt-4 inline-block bg-secondary text-white px-6 py-3 rounded text-xl hover:bg-secondary-dark transition-colors">Book a Table</a>
    </nav>
  </div>
</header>

<script>
  // Add background to header on scroll
  const header = document.getElementById('main-header');
  
  if (header) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header.classList.add('bg-primary', 'shadow-md');
        header.classList.remove('bg-transparent');
      } else {
        header.classList.remove('bg-primary', 'shadow-md');
        header.classList.add('bg-transparent');
      }
    });
    
    // Set initial state based on scroll position
    if (window.scrollY > 50) {
      header.classList.add('bg-primary', 'shadow-md');
    } else {
      header.classList.add('bg-transparent');
    }
  }
</script>