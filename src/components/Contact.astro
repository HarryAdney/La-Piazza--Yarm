<section id="contact" class="py-20 bg-light">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row gap-12">
      <!-- Contact Information -->
      <div class="lg:w-1/2 animate-slide-up">
        <h2 class="text-3xl md:text-4xl font-serif font-medium mb-6">
          Contact Us
        </h2>
        <div class="w-20 h-1 bg-secondary mb-8"></div>

        <div class="space-y-6 mb-8">
          <div class="flex items-start gap-4">
            <div class="text-secondary mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-primary mb-1">Address</h3>
              <address class="not-italic text-gray-600">
                75 High St.<br>
                Stockton-on-Tees<br>
                TS15 9–êH
              </address>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="text-secondary mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-primary mb-1">Phone</h3>
              <p class="text-gray-600">
                <a href="tel:+441642045870" class="hover:text-secondary">01642 045 870</a>
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="text-secondary mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-primary mb-1">Email</h3>
              <p class="text-gray-600">
                <a href="mailto:info@elixirrichmond.co.uk" class="hover:text-secondary">info@elixirrichmond.co.uk</a>
              </p>
            </div>
          </div>
        </div>

        <div class="mb-8">
          <h3 class="text-lg font-medium text-primary mb-3">Opening Hours</h3>
          <ul class="space-y-2 text-gray-600">
            <li class="flex justify-between">
              <span>Monday - Thursday</span>
              <span>5:00 PM - 11:00 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Friday - Saturday</span>
              <span>5:00 PM - 12:00 AM</span>
            </li>
            <li class="flex justify-between">
              <span>Sunday</span>
              <span>12:00 PM - 10:00 PM</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Reservation Form -->
      <div class="lg:w-1/2 animate-slide-up" style="animation-delay: 0.2s;">
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-serif font-medium mb-6 text-primary">Make a Reservation</h2>

          <form class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>
              <div>
                <label for="guests" class="block text-sm font-medium text-gray-700 mb-1">Number of Guests</label>
                <select
                  id="guests"
                  name="guests"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                >
                  <option value="">Select</option>
                  <option value="1">1 Person</option>
                  <option value="2">2 People</option>
                  <option value="3">3 People</option>
                  <option value="4">4 People</option>
                  <option value="5">5 People</option>
                  <option value="6">6 People</option>
                  <option value="7">7+ People (Please specify in notes)</option>
                </select>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="date" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
                <input
                  type="date"
                  id="date"
                  name="date"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                />
              </div>
              <div>
                <label for="time" class="block text-sm font-medium text-gray-700 mb-1">Time</label>
                <select
                  id="time"
                  name="time"
                  class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
                  required
                >
                  <option value="">Select</option>
                  <option value="17:00">5:00 PM</option>
                  <option value="17:30">5:30 PM</option>
                  <option value="18:00">6:00 PM</option>
                  <option value="18:30">6:30 PM</option>
                  <option value="19:00">7:00 PM</option>
                  <option value="19:30">7:30 PM</option>
                  <option value="20:00">8:00 PM</option>
                  <option value="20:30">8:30 PM</option>
                  <option value="21:00">9:00 PM</option>
                  <option value="21:30">9:30 PM</option>
                </select>
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Special Requests</label>
              <textarea
                id="message"
                name="message"
                rows="3"
                class="w-full p-3 border border-gray-300 rounded focus:ring-2 focus:ring-secondary focus:border-secondary"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-secondary hover:bg-secondary-dark text-white font-medium py-3 px-4 rounded transition-colors"
            >
              Book Now
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>