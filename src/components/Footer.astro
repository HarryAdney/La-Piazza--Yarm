---
const currentYear = new Date().getFullYear();
const address = {
  street: "76 High St.",
  city: "Yarm",
  county: "Stockton-on-Tees",
  postcode: "TS15 9AH"
};
---

<footer class="bg-primary text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Contact Info -->
      <div>
        <h3 class="text-xl font-serif mb-4 text-secondary">La Piazza, Yarm</h3>
        <address class="not-italic mb-4 text-sm leading-relaxed">
          <p>76 High St.</p>
          <p>Yarm</p>
          <p>Stockton-on-Tees</p>
          <p>TS15 9AH</p>
        </address>
        <p class="text-sm mb-2">
          <span class="font-medium">Tel:</span>
          <a href="tel:+441642045870" class="hover:text-secondary">01642 045 870</a>
        </p>
        <p class="text-sm">
          <span class="font-medium">Email:</span>
          <a href="mailto:info@elixirrichmond.co.uk" class="hover:text-secondary">info@elixirrichmond.co.uk</a>
        </p>
      </div>

      <!-- Opening Hours -->
      <div>
        <h3 class="text-xl font-serif mb-4 text-secondary">Opening Hours</h3>
        <ul class="space-y-2 text-sm">
          <li class="flex justify-between">
            <span>Monday - Thursday</span>
            <span>5:00 PM - 11:00 PM</span>
          </li>
          <li class="flex justify-between">
            <span>Friday - Saturday</span>
            <span>5:00 PM - 12:00 AM</span>
          </li>
          <li class="flex justify-between">
            <span>Sunday</span>
            <span>12:00 PM - 10:00 PM</span>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-serif mb-4 text-secondary">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/" class="hover:text-secondary transition-colors">Home</a></li>
          <li><a href="/menu" class="hover:text-secondary transition-colors">Menu</a></li>
          <li><a href="/about" class="hover:text-secondary transition-colors">About Us</a></li>
          <li><a href="/contact" class="hover:text-secondary transition-colors">Contact</a></li>
          <li><a href="/reservations" class="hover:text-secondary transition-colors">Book a Table</a></li>
          <li><a href="/privacy-policy" class="hover:text-secondary transition-colors">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h3 class="text-xl font-serif mb-4 text-secondary">Newsletter</h3>
        <p class="text-sm mb-4">Subscribe to our newsletter for special offers and updates.</p>
        <form class="space-y-3">
          <div>
            <input
              type="email"
              placeholder="Your Email Address"
              class="w-full p-2 bg-primary-light text-white rounded focus:outline-none focus:ring-2 focus:ring-secondary text-sm"
              required
            />
          </div>
          <button
            type="submit"
            class="bg-secondary hover:bg-secondary-dark text-white px-4 py-2 rounded text-sm transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Social and Copyright -->
    <div class="mt-12 pt-8 border-t border-primary-light">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex space-x-6 mb-4 md:mb-0">
          <a href="https://facebook.com" aria-label="Facebook" class="text-white hover:text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          <a href="https://instagram.com" aria-label="Instagram" class="text-white hover:text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://twitter.com" aria-label="Twitter" class="text-white hover:text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
          </a>
        </div>
        <p class="text-sm text-gray-400">
          &copy; {currentYear} La Piazza, Yarm. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>