---
const currentYear = new Date().getFullYear();
---

<footer class="pt-16 pb-8 text-white bg-primary">
  <div class="container px-4 mx-auto">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      <!-- Contact Info -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-serif text-xl text-secondary">La Piazza, Yarm</h3>
        <address class="mb-4 text-sm not-italic leading-relaxed">
          <p>76 High St.</p>
          <p>Yarm</p>
          <p>TS15 9AH</p>
        </address>
        <p class="mb-2 text-sm">
          <span class="font-medium">Tel:</span>
          <a href="tel:+441642045870" class="hover:text-secondary">01642 045 870</a>
        </p>
        <p class="text-sm">
          <span class="font-medium">Email:</span>
          <a href="mailto:enquiries@lapiazzayarm.com" class="hover:text-secondary">enquiries@lapiazzayarm.com</a>
        </p>
      </div>

      <!-- Newsletter -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-serif text-xl text-secondary">Newsletter</h3>
        <p class="mb-4 text-sm">Subscribe to our newsletter for special offers and updates.</p>
        <form class="space-y-3">
          <div>
            <input
              type="email"
              placeholder="Your Email Address"
              class="w-full p-2 text-sm text-white rounded bg-primary-light focus:outline-none focus:ring-2 focus:ring-secondary"
              required
            />
          </div>
          <button
            type="submit"
            class="px-4 py-2 text-sm text-white transition-colors rounded bg-secondary hover:bg-secondary-dark"
          >
            Subscribe
          </button>
        </form>
      </div>
      
      <!-- Social Media -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-serif text-xl text-secondary">Follow Us</h3>
        <div class="flex flex-col space-y-4">
          <a href="https://www.facebook.com/profile.php?id=61575719523081" class="flex items-center text-sm hover:text-secondary" target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
            Facebook
          </a>
          <a href="https://www.instagram.com/lapiazzayarm/" class="flex items-center text-sm hover:text-secondary" target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            Instagram
          </a>
          
        </div>
      </div>
      
      <!-- Opening Hours -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-serif text-xl text-secondary">Opening Hours</h3>
        <ul class="space-y-2 text-sm">
          <li class="grid grid-cols-2">
            <span class="text-gray-300">Monday - Saturday</span>
            <span class="text-right">12:00 PM - 10:00 PM</span>
          </li>

          <li class="grid grid-cols-2">
            <span class="text-gray-300">Sunday</span>
            <span class="text-right">12:00 PM - 9:00 PM</span>
          </li>
        </ul>
      </div>
      
    </div>

    <!-- Social and Copyright -->
    <div class="pt-8 mt-12 border-t border-primary-light">
      <div class="text-center">
        <p class="text-sm text-gray-400">
          &copy; {currentYear} La Piazza, Yarm Ltd. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>