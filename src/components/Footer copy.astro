---
const currentYear = new Date().getFullYear();
const address = {
  street: "76 High St.",
  city: "Yarm",
  county: "Stockton-on-Tees",
  postcode: "TS15 9AH",
};
---

<footer class="pb-8 text-white bg-primary">
  <div class="container px-4 mx-auto">
    <!-- Social and Copyright -->
    <div class="pt-8 mt-12 border-t border-primary-light">
      <div class="flex flex-col items-center justify-between md:flex-row">
        <div class="flex mb-4 space-x-6 md:mb-0">
          <a
            href="https://facebook.com"
            aria-label="Facebook"
            class="text-white hover:text-secondary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <path
                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
              ></path>
            </svg>
          </a>
          <a
            href="https://instagram.com"
            aria-label="Instagram"
            class="text-white hover:text-secondary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="https://twitter.com"
            aria-label="Twitter"
            class="text-white hover:text-secondary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-5 h-5"
            >
              <path
                d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
              ></path>
            </svg>
          </a>
        </div>

        <div class="flex flex-col items-center justify-between md:flex-row">
          <p class="text-sm text-gray-400">
            &copy; {currentYear} La Piazza, Yarm. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
